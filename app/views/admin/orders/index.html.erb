<!-- admin order index -->
<div class="container">
  <div class="row">
    <div class="col-xs-3 col-xs-offset-1">
      <h3>注文履歴一覧</h3>
    </div>
  </div>
      <br>
  <div class="row">
      <div class="col-xs-8 col-xs-offset-1">
        <table class="table">
          <thead>
            <tr class="active">
              <td class="col-xs-2">購入日時</td>
              <td class="col-xs-2">購入者</td>
              <td class="col-xs-2">注文個数</td>
              <td class="col-xs-2">注文ステータス</td>
            </tr>
          </thead>

          <tbody>
          	<% @orders.each do |order| %>
            <tr>
              <td class="col-xs-2">
                <%= link_to admin_order_path(order) do %>
                  <%= l order.created_at %>
                <% end %>
                </td>
              <td class="col-xs-2"><%= order.member.name_family %><%= order.member.name_first %></td>
              <td class="col-xs-2"><%#= order.order_item.quantity %>個数</td>
              <td class="col-xs-2"><%= order.order_status %></td>
            </tr>
            <% end %>
          </tbody>

        </table>
        <%= paginate @orders %>
      </div>
  </div>
</div>
