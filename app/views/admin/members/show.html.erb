<%# 会員詳細画面 %>
<div class="container">
  <div class="row">
    <h2><%= @member.name_family %><%= @member.name_first %>さんの会員詳細</h2>
    <table class="col-xs-3 admin-show-table">
      <tbody>
        <tr class="admin-show-info">
          <td>顧客ID</td>
          <td><%= @member.id %></td>
        </tr>
        <tr class="admin-show-info">
          <td>氏名</td>
          <td><%= @member.name_family %><%= @member.name_first %></td>
        </tr>
        <tr class="admin-show-info">
          <td>フリガナ</td>
          <td><%= @member.name_family_kana %><%= @member.name_first_kana %></td>
        </tr>
        <tr class="admin-show-info">
          <td>郵便番号</td>
          <td><%= @member.postal_code %></td>
        </tr>
        <tr class="admin-show-info">
          <td>住所</td>
          <td><%= @member.address %></td>
        </tr>
        <tr class="admin-show-info">
          <td>電話番号</td>
          <td><%= @member.phone_number %></td>
        </tr>
        <tr class="admin-show-info">
          <td>メールアドレス</td>
          <td><%= @member.email %></td>
        </tr>
      </tbody>
    </table>
    <div class="col-xs-offset-3">
      <% if @member.is_withdrawal_flag == "t" %>
        <div class="admin-flag-true">有効会員</div>
       <% else %>
        <div class="admin-flag-false">退会済み</div>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <%= link_to '編集する', edit_admin_member_path(@member),class:" btn btn-primary admin-show-button" %>
    <%= link_to '注文履歴一覧を見る', member_orders_path(@member),class:" btn btn-primary admin-show-button" %>
  </div>
</div>

