<%# 会員詳細画面 %>
<div class="container">
  <div class="row">
    <h2><%= @member.name_family %><%= @member.name_first %>さんの会員詳細</h2>
    <table class="col-xs-3">
      <tbody>
        <tr>
          <td>顧客ID</td>
          <td><%= @member.id %></td>
          <%# なぜかうまくできないポイント %>
            <% if @member.is_withdrawal_flag == "t" %>
            <td>有効</td>
            <% else %>
            <td>退会済み</td>
            <% end %>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @member.name_family %><%= @member.name_first %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @member.name_family_kana %><%= @member.name_first_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @member.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @member.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @member.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @member.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="container">
  <div class="row">
    <%= link_to '編集する', edit_admin_member_path(@member),class:" btn btn-primary admin-show-button" %>
    <%= link_to '注文履歴一覧を見る', member_order_items_path(@member),class:" btn btn-primary admin-show-button" %>
  </div>
</div>

