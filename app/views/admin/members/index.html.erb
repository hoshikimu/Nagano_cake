<%# 会員一覧画面 %>
<div class="container">
  <div class="row">
    <h2>会員一覧</h2>
  </div>  
</div>
<div class="container col-xs-6 col-xs-offset-3">
  <div class="row">
    <% @members.each do |member| %>
      <table class="table col-xs-8">
        <thead>
          <tr>
            <td>会員ID</td>
            <td>氏名</td>
            <td>メールアドレス</td>
            <td>ステータス</td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= member.id %></td>
            <td>
              <%= link_to admin_member_path(member) do %>
                <%= member.name_family %>
                <%= member.name_first %>
              <% end %>
            </td>
            <td><%= member.email %></td>
            <% if member.is_withdrawal_flag == "t" %>
            <td>有効</td>
            <% else %>
            <td>退会済</td>
            <% end %>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>