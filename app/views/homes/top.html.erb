<%# 顧客用トップページ %>

<%# 後ほど実装、Each文とリンク？ %>
<div class="container homes-top-wrapper">
  <div class="row">

    <table class="col-xs-2 homes-top-genre-search">
      <thead>
        <tr class="homes-top-genre-title">
          <td>ジャンル検索</td>
        </tr>
      </thead>
      <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <td class="homes-top-genre-text">
              <%= link_to items_path do %>
                <%= genre.name %>
              <% end %>
            </td>
          </tr>
        </tbody>
       <% end %>
    </table>

    <div class="homes-top-image col-xs-8 col-xs-offset-1">
      <div class="homes-top-text col-xs-10 col-xs-offset-1">
        <p>
          ようこそ、Nagano_cakeへ！<br>
          このサイトは、ケーキ販売のECサイトになります。<br>
          会員でない方も商品の閲覧はできますが、<br>
          購入には会員登録が必要になります。
        </p>
      </div>
    </div>

  </div>
</div>

    <%# 後ほど実装、Each文とリンク %>
    <%# リンク先は商品詳細ページ item_path(@item.id) %>
<div class="container">
  <div class="row">
    <div class="homes-top-under-menu col-xs-8 col-xs-offset-3">
      <h2>オススメ商品 *itemsが完成したら着手</h2>
      <% @items.each do |item| %>
        <% link_to items_path do %>
          <div class="homes-top-under-image">
            <%= attachment_image_tag item, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size:'30x30' %> 
           </div>
         <% end %>
         <p><%= item.name %></p>
         <p><%= item.price %></p>
      <% end %>
      <h5 class="col-xs-offset-10"><%= link_to 'もっと見る  >', items_path %></h5>
    </div>
  </div>
</div>


