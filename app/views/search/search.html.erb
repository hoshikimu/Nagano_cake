<div class="container">
  <div class="row">
    <h2><%= @content %>の検索結果</h2>
  </div>
</div>

<% if @model == "member" %>
      <div class="container col-xs-6 col-xs-offset-3">
        <div class="row">
           <% @records.each do |member| %>
            <table class="table col-xs-8">
              <thead>
                <tr>
                  <td>会員ID</td>
                  <td>氏名</td>
                  <td>メールアドレス</td>
                  <td>ステータス</td>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= member.id %></td>
                  <td>
                    <%= link_to admin_member_path(member) do %>
                      <%= member.name_family %>
                      <%= member.name_first %>
                    <% end %>
                  </td>
                  <td><%= member.email %></td>
                  <% if member.is_withdrawal_flag == "t" %>
                      <td>有効</td>
                    <% else %>
                      <td>退会済</td>
                  <% end %>
                </tr>
              </tbody>
            </table>
          <% end %>
        </div>
      </div>

  <% else %>

  <div class="container">
    <div class="row">
      <div class="items">
        <% @records.each do |item| %>
          <div class="item-box">
            <%= link_to admin_item_path(item) do %>
              <%= attachment_image_tag item, :image, format: "jpeg", width:"200", height:"120", fallback: "no_image.jpg" %>
            <% end %>
            <h5><%= link_to item.name, item_path(item) %></h5>
            <p><span>¥</span><%= item.price.to_s(:delimited) %>（税抜）</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
<% end %>