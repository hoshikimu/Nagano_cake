<%# 顧客 ログイン画面 %>
<div class="container">
  <div class="row">
      
    <h3 class="col-xs-offset-2">会員の方はこちらから</h3>
    <div class="col-xs-offset-2">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <h4 class="col-xs-2">メールアドレス</h4>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "col-xs-6" %>
        </div>

        <div class="field">
          <h4 class="col-xs-6">パスワード</h4>
          <%= f.password_field :password, autocomplete: "current-password",class: "col-xs-6" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary col-xs-2" %>
        </div>
      <% end %>
    </div>

  </div>
</div>
