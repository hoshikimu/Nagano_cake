<%# 顧客の登録情報編集ページ %>

<h2>登録情報編集</h2>
<div class="edit-member-info">
<%= form_for @member do |f| %>
  <table>
    <tbody>
      <tr>
        <td>氏名</td>
        <td>（姓）</td>
        <td><%= f.text_field :name_family, autofocus: true %></td>
        <td>（名）</td>
        <td><%= f.text_field :name_first, autofocus: true %></td>
      </tr>
      <tr>
        <td>カナ</td>
        <td>（セイ）</td>
        <td><%= f.text_field :name_family_kana, autofocus: true %></td>
        <td>（メイ）</td>
        <td><%= f.text_field :name_first_kana, autofocus: true %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :postal_code, autofocus: true %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, autofocus: true %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :phone_number, autofocus: true %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email, autofocus: true %></td>
      </tr>
    </tbody>
  </table>
  <%= f.submit '編集内容を保存する' , class: "btn btn-primary"%>
  <% end %>
</div>

<%= link_to '退会する', withdrawal_path, class: "btn btn-danger" %>
