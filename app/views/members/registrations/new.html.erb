<%# 顧客側 新規登録画面 %>
<h1>新規会員登録</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "members/shared/error_messages", resource: resource %>
  <table>
    <tbody>
      <tr>
        <td>名前</td>
        <td>（姓）</td>
        <td><%= f.text_field :name_family, autofocus: true %></td>
        <td>（名）</td>
        <td><%= f.text_field :name_first, autofocus: true %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
      <td>郵便番号（ハイフンなし）</td>
      <td><%= f.text_field :postal_code, autofocus: true %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, autofocus: true %></td>
      </tr>
      <tr>
        <td>電話番号（ハイフンなし）</td>
        <td><%= f.text_field :phone_number, autofocus: true %></td>
      </tr>
      <tr>
        <td>パスワード（６文字以上）</td>
        <td><%= f.password_field :password_confirmation%></td>
      </tr>
      <tr>
        <td>パスワード（確認用）</td>
        <td><%= f.password_field :password_confirmation%></td>
      </tr>
    </tbody>
  </table>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "members/shared/links" %>
