<%# 顧客マイページ %>
<div class="container">
  <div class="row">
    <h3>マイページ</h3>
    <div class="my-page-sub-title">
      <span>登録情報</span>
      <%= link_to '編集する', edit_member_path(@member.id), class: "btn btn-primary" %>
      <%= link_to 'パスワードを変更する', edit_member_password_path(current_member), class: "btn btn-primary" %>
    </div>
    <div class="member-info">
      <table class="table-bordered col-xs-6">
        <tbody>
          <tr>
            <td class="col-xs-3 sub-title-cell">氏名</td>
            <td class="col-xs-6"><%= @member.name_family %><%= @member.name_first %></td>
          </tr>
          <tr>
          <td class="col-xs-3 sub-title-cell">カナ</td>
          <td class="col-xs-6"><%= @member.name_family_kana %><%= @member.name_first_kana %></td>
          </tr>
          <tr>
          <td class="col-xs-3 sub-title-cell">郵便番号</td>
          <td class="col-xs-6"><%= @member.postal_code %></td>
          </tr>
          <tr>
          <td class="col-xs-3 sub-title-cell">住所</td>
          <td class="col-xs-6"><%= @member.address %></td>
          </tr>
          <tr>
          <td class="col-xs-3 sub-title-cell">電話番号</td>
          <td class="col-xs-6"><%= @member.phone_number %></td>
          </tr>
          <tr>
          <td class="col-xs-3 sub-title-cell">メールアドレス</td>
          <td class="col-xs-6"><%= @member.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container order-info-button">
  <div class="row">
    <table class="table-borderless col-xs-6">
      <thead>
        <tr>
          <td class="col-xs-2"><h3>配送先</h3></td>
          <td class="col-xs-6"><%= link_to '一覧を見る', member_shipping_addresses_path(@member.id), class: "btn btn-primary col-xs-4" %> </td>
        </tr>
        <tr>
        <td class="col-xs-2"><h3>注文履歴</h3></td>
        <td class="col-xs-6"><%= link_to '一覧を見る', member_orders_path(@member.id), class: "btn btn-primary col-xs-4" %></td>
        </tr>
      </thead>
    </table>
  </div>
</div>