<div class="">
  <div class="main-top">
    <h1>ショッピングカート</h1>
    <div class="destroy-all"><%= link_to 'カートを空にする', member_cart_all_item_path, method: :delete, class: "btn btn-danger" %>
  </div>
  <div class="main">
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_item_member.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.price %></td>
              <td>
                <%= form_for [@member, cart_item] do |f| %>
                  <%= f.text_field :quantity %>
                  <%= f.submit '変更', class: "btn btn-primary" %>
                <% end %>
              </td>
            <td><%= cart_item.item.price * cart_item.quantity %></td>
            <td><%= link_to '削除する', member_cart_item_path(cart_item.member,cart_item), method: :delete, class: "btn btn-danger" %></td>
          </tr>
          <% @total = @total + cart_item.item.price * cart_item.quantity %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="main-bottom">
    <div class="shopping"><%= link_to '買い物を続ける', items_path, class: "btn btn-primary" %></div>
    <div class="table">
      <table>
        <tbody>
          <td>合計金額</td>
          <td><%= @total %></td>
        </tbody>
      </table>
    </div>
  </div>
  <div class="enter"><%= link_to '情報入力に進む', new_member_order_path, class: "btn btn-success" %></div>
</div>