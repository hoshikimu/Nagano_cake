<!-- member/orders index -->
<div class="container">
  <div class="row">
    <div class="col-xs-3 col-xs-offset-1">
      <h3>注文履歴一覧</h3>
    </div>
  </div>
      <br>
  <div class="row">
  	<div class="col-xs-10 col-xs-offset-1">
        <table class="table table-bordered">
          <thead>
            <tr class="active">
              <td class="col-xs-1">注文日</td>
              <td class="col-xs-4">配送先</td>
              <td class="col-xs-2">注文商品</td>
              <td class="col-xs-1">支払金額</td>
              <td class="col-xs-1">ステータス</td>
              <td class="col-xs-1">注文詳細</td>
            </tr>
          </thead>
          <tbody>
          	<% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td><%= order.postal_code %><br>
                <%= order.address %><br>
          	    <%= order.receiver %>
          	  </td>
          	  <% #total = 0 %>
              <td>
              	<% order.order_items.each do |order_item| %>
              	  <%= order_item.item.name %>
                <% end %>
              </td>
              <td><%# total = tax_included_price(@order_item).to_i*order_item.quantity+=postage %>
              	<%= order.total %>
              </td>
              <td><%= order.order_status %></td>
              <td><%= link_to "表示する", member_order_path(order.member.id, order.id), class:"btn btn-primary" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>