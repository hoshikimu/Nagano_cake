<!-- member/orders index -->
<div class="container">
  <div class="row">
    <div class="col-xs-3 col-xs-offset-1">
      <h3>注文履歴一覧</h3>
    </div>
  </div>
      <br>
  <div class="row">
  	<div class="col-xs-10 col-xs-offset-1">
        <table class="table table-bordered">
          <thead>
            <tr class="active">
              <td>注文日</td>
              <td>配送先</td>
              <td>注文商品</td>
              <td>支払金額</td>
              <td>ステータス</td>
              <td>注文詳細</td>
            </tr>
          </thead>
        <% @orders.each do |order| %>
          <tbody>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td><%= order.postal_code %><br>
                <%= order.address %><br>
          	    <%= order.receiver %>
          	  </td>
          	<% @order_items.each do |order_item| %>
              <td><%= order_item.item.name %></td>
            <% end %>
              <td><%= order.total %></td>
              <td><%= order.order_status %></td>
              <td><%= link_to "表示する", member_order_path(order.member.id, order.id), class:"btn btn-primary" %></td>
            </tr>
          </tbody>
        <% end %>
        </table>
      </div>
  </div>
</div>