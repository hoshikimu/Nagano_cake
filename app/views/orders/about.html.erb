<!-- 注文情報の確認ページを表示 -->
<div class="container">
  <div class="row">
    <h3>注文情報確認</h3>
  </div>

  <%= form_with(model: @order, local: true) do |f| %>

  <div class="d-none d-xs-block space">
    <div class="row">
      <div class="col-xs-5"><p>商品名</p></div>
      <div class="col-xs-2"><p>単価（税込）</p></div>
      <div class="col-xs-2"><p>数量</p></div>
      <div class="col-xs-2"><p>小計</p></div>
    </div>
  </div>

  <% sum_all = 0 %>
  <% @cart_items.each do |cart_item| %>
  <div class="row">
    <div class="col-xs-3">
      <%= link_to item_path(cart_item.item) do %>
      <%= attachment_image_tag(cart_item.item, :image, :fill, 100, 100, fallback: "no_img.jpg") %>
      <% end %>
    </div>
    <div class="col-xs-2">
      <%= link_to item_path(cart_item.item) do %>
      <%= cart_item.item.name %>
      <% end %>
    </div>
    <div class="col-xs-2">
      <%= price_include_tax(cart_item.item.price) %>
    </div>
    <div class="col-xs-2">
      <%= cart_item.quantity %>
    </div>
    <div class="col-xs-2">
      <%= sum_item = price_include_tax(cart_item.item.price).to_i * cart_item.quantity %>円
      <% sum_all += sum_item %>
    </div>
  </div>
  <% end %>

  <div class="row">
    <div class="col-xs-12">
      <div class="row">
        <div class="col-xs-3">
          <p>送料</p>
        </div>
        <div class="col-xs-3">
          <%= @order.postage %>円
        </div>
      </div>
      <div class="row">
        <div class="col-xs-3">
          <p>商品合計</p>
        </div>
        <div class="col-xs-3">
          <%= sum_all.to_i %>円
        </div>
      </div>
      <div class="row">
        <div class="col-xs-3">
          <p>ご請求額</p>
        </div>
        <div class="col-xs-3">
          <% total = sum_all + @order.postage.to_i %>
          <%= total.to_i %>円
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2">
      <h3>支払方法</h3>
    </div>
    <div class="col-xs-4">
      <%= payment_method(@order.payment_method) %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2">
      <h3>お届け先</h3>
    </div>
    <div class="col-xs-4">
      <%= @order.postal_code %>
      <%= @order.address %>
      <%= @order.receiver %>
    </div>
  </div>

  <%= f.hidden_field :member_id, :value => current_member.id %>
  <%= f.hidden_field :postal_code, :value => "#{@order.postal_code}" %>
  <%= f.hidden_field :address, :value => "#{@order.address}" %>
  <%= f.hidden_field :receiver, :value => "#{@order.receiver}" %>
</div>

<div class="row">
  <div class="col-xs-2 offset-xs-5">
    <%= f.submit "購入を確定する", class: "btn btn-danger btn-lg" %>
  </div>
</div>


<% end %>
</div>