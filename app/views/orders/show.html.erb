<!-- member注文履歴詳細 -->
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h4>注文履歴詳細</h4>
    </div>
  </div>
  <div class="row">
  	<div class="col-xs-6">
  	  <strong>注文情報</strong>
      <table class="table table-bordered">
        <tr>
          <th class="active">注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="active">配送先</th><td><%= @order.postal_code %><br>
          	<%= @order.address %><br>
          	<%= @order.receiver %>
          </td>
        </tr>
        <tr>
          <th class="active">支払方法</th><td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th class="active">ステータス</th><td><%= @order.order_status %></td>
        </tr>
      </table>
    </div>
    <div class="col-xs-3">
      <strong>請求情報</strong>
    </div>
    <div class="col-xs-4">
      <table class="table table-bordered">
        <tr>
          <th class="active">商品合計</th><td><%= @subtotal_price %></td>
        </tr>
        <tr>
          <th class="active">配送料</th><td><%= @order.postage %></td>
        </tr>
        <tr>
          <th class="active">ご請求額</th><td><%= @total %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
  	<div class="col-xs-3">
  	  <h4>注文内容</h4>
  	</div>
  </div>
  <div class="row">
    <div class="col-xs-8">
      <table class="table table-bordered">
        <thead>
          <tr class="active">
            <td>商品</td>
            <td>単価（税込）</td>
            <td>個数</td>
            <td>小計</td>
          </tr>
        </thead>
      <% @order.order_items.each do |order_item| %>
        <tbody>
         <tr>
           <td>
           	<%= order_item.item.name %>
           	</td>
           <td>
         	<%= @tax_icluded_price %>
           </td>
           <td>
           	<%= order_item.quantity %>
           </td>
           <td>
           	<%= @subtotal_price %>
           </td>
          </tr>
         </tbody>
       <% end %>
      </table>
    </div>
  </div>
</div>